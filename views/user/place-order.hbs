<script>

  document.getElementById('checkout-form').addEventListener('submit', function (evt) {
    evt.preventDefault();
    $.ajax({
      url: '/place-order',

      method: 'post',
      data: $('#checkout-form').serialize(),
      success: (response) => {

        if (response.status) {
          location.href = '/order-success'


        }

      }
    })

  })

</script>




