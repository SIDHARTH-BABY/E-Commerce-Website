
<section class="h-100 h-custom " style="background-color: rgb(238, 238, 238);">
  <div class="container py-5 h-100">
    <div class="row d-flex justify-content-center align-items-center h-100">
      <div class="col">
        <div class="card">
          <div class="card-body p-4">

            <div class="row">

              <div class="col-lg-7">
                <h5 class="mb-3"><a href="#!" class="text-body"><i class="fas fa-long-arrow-alt-left me-2">Continue
                      shopping</i></a></h5>
                <hr>

                <div class="d-flex justify-content-between align-items-center mb-4">
                  <div>
                    <p class="mb-1"></p>

                  </div>

                </div>
                
                {{#each products}}

                <div class="card mb-3">
                  <div class="card-body">
                    <div class="d-flex justify-content-between">

                      <div class="d-flex flex-row align-items-center">

                        <div>
                          <img src="/product-images/{{this.product._id}}.png" class="img-fluid rounded-3"
                            alt="Shopping item" style="width: 65px;">
                        </div>
                        <div class="ms-2">
                          <h5>{{this.product.name}}</h5>


                          <p class="small mb-0">{{this.product.Category}}</p>
                        </div>

                      </div>
                      <div class="d-flex flex-row align-items-center">

                        <div style="width: 50px;">
                          <h5 class="fw-normal mb-0"></h5>
                        </div>

                        <div style="width: 80px ml-1 mb-2">
                          <h5 class="mr-3 mb-4">â‚¹{{this.product.price}}</h5>
                        </div>





                        <div class="d-flex mb-4" style="max-width: 200px">
                          <button class="btn btn-primary  mx-2 "
                            onclick="changeQuantity('{{this._id}}','{{this.product._id}}',-1,'{{this.quantity}}')">
                            -
                          </button>


                          <input id="{{this.product._id}}" value="{{this.quantity}}" class="form-control" />




                          <button class="btn btn-primary mx-2  "
                            onclick="changeQuantity('{{this._id}}','{{this.product._id}}',1,'{{this.quantity}}')">
                            +
                          </button>
                        </div>


                        <button class="btn btn-danger ml-3 mb-4"
                          onclick="deleteProduct('{{this._id}}','{{this.product._id}}')">
                          Remove
                        </button>

                        <a href="#!" style="color: #cecece;"><i class="fas fa-trash-alt"></i></a>
                      </div>
                    </div>
                  </div>
                </div>

                {{/each}}



              </div>


            </div>

          </div>
        </div>
        <hr style="height:2px; width:50%; border-width:0; color:red; background-color:red">


        <div class="card mb-5 ">
          <div class="card-body p-4 ">

            <p class="d-flex justify-content-center">
              <span class="text-xl-left mt-1">Order total:</span>
              <span class="lead fw-normal text-lg-left ml-3"><span id="total">{{totalValue}}</span></span>
            </p>
  
            <div class="d-flex justify-content-center">
              <a href="/place-order" class=" btn btn-success ml-3">Proceed to Checkout</a>

            </div>
          




          </div>
        </div>






      </div>
    </div>


  </div>
</section>

