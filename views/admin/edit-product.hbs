






    
    
     <section class="d-flex justify-content-center">


      
    
  <div class=" container row d-flex justify-content-center">
    <div class="ml-5 col-md-6">
      <h2 class="text-center mt-5">Edit Products</h2>
      <form action="/admin/edit-product/{{product._id}}" method="post" enctype="multipart/form-data"> 
      {{!-- enctype    kodthalee  image file upload cheyyullu--}}
        <label for="">Name</label>
        <input type="text" name="name" class="form-control" value="{{product.name}}">

        <label for="">Description</label>
        <input type="text" name="description" class="form-control" value="{{product.description}}">

        <label for="">Price</label>
        <input type="Number" name="price" class="form-control" value="{{product.price}}">

         <label for="">Category</label>
        <input type="text" name="description" class="form-control" value="{{product.Category}}">

        <select class="form-select" id="select" name="Category" aria-label="Default select example">
                <option selected>Select Category</option>
              {{#each catdetails}}
              <option value="{{this.category}}">{{this.category}}</option>
              {{/each}}
            </select>

        <label for="">Image</label>
        <img src="/product-images/{{product._id}}.png" alt="" style="width: 250px;height:auto" id="imgView">
        <input type="file" name="Image" class="form-control" onchange="viewImage(event)">

        <button type="submit" class="btn btn-success mt-4">Submit</button>

      </form>
    </div>
  </div>
</section>

<script>
  function viewImage(event){
    document.getElementById('imgView').src=URL.createObjectURL(event.target.files[0])
  }
</script>


   
   
    

    
 


