



<div class="content">
   <a href="/admin/add-product" class="btn btn-success">Add Product</a>
   
<section>
    <div class="container  d-flex justify-content-end"> 
        <div class="float-right">
            
        </div>
        <table class="table mt-5">
            <thead>
                <tr>
                    <th scope="col ">Number</th>
                    <th scope="col">Name</th>
                    <th scope="col">Discription</th>
                    <th scope="col">Category</th>
                   
                    
                    <th scope="col">Price</th>
                    <th scope="col">Image</th>
                </tr>
            </thead>
            <tbody>
                {{#each products}}
                
                <tr>
                    <th scope="row">{{inc @index}}</th>
                    <td>{{this.name}} </td>
                    <td>{{this.description}} </td>


              
                     <td>{{this.Category}} </td>


                    
                    
                    <td>â‚¹{{this.price}}</td>
                    <td><img src="/product-images/{{this._id}}.png" style="width: 50px; height: 50px;"></td>
               
                    <td><a href="/admin/edit-product/{{this._id}}" class="btn btn-primary">Edit</a></td>
                     <td><a href="/admin/delete-product/{{this._id}}" class="btn btn-danger" onclick="return confirm('Are you sure want to delete {{this.Name}} ?')">Delete</a></td>
                      
                </tr>
                {{/each}}
            </tbody>
        </table>
    </div>

</section>

</div>